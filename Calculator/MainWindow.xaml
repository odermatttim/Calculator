<Window x:Class="CalculatorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="150" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Margin="5" Name="InputTextBox" TextChanged="InputTextBox_TextChanged"/>
        <Button Margin="5" Grid.Row="1" Click="CalculateButton_Click" Name="CalculateButton" IsDefault="True">Calculate</Button>
        <TextBlock Margin="5" Grid.Row="2" Name="OutputTextBlock"></TextBlock>
    </Grid>
</Window>
